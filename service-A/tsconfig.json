{
  "compilerOptions": {
    "target": "ES2020",             // Keep latest ES features
    "module": "CommonJS",           // ✅ Change from "ESNext" or "NodeNext" to "CommonJS"
    "moduleResolution": "Node",     // ✅ Use Node.js-style module resolution
    "lib": ["ES2020", "DOM"],       // Supports modern JS and browser APIs
    "strict": true,                 // Enforce TypeScript best practices
    "outDir": "dist",               // Ensure compiled files go to `dist/`
    "rootDir": "./",                // Set project root
    "declaration": true,            // Enable type declaration generation
    "esModuleInterop": true,        // ✅ Ensure CommonJS & ES module compatibility
    "allowSyntheticDefaultImports": true, // ✅ Allows default imports from CommonJS
    "sourceMap": true               // ✅ Enables better debugging support
  },
  "exclude": ["node_modules", "cdk.out"]
}